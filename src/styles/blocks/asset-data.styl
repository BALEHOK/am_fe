.asset-data
  display block
  position relative
  border 1px solid #e2e2e2
  border-radius 4px
  margin 0 0 10px 0
  padding 45px 30px 30px 30px

  &_aside_true
    padding-right 240px

  &_empty
    min-height 345px

    &::after
      content "No data"
      font-family $Bold
      font-size 18px
      line-height 30px
      text-align center
      color #c6c6c6
      position absolute
      left 0
      right 0
      top 50%
      margin -15px 0 0 0

  &__header
    position absolute
    left 15px
    top -15px

  &__title
    display inline-block
    vertical-align top
    color #ffffff
    background $colorGreen
    padding 0 20px
    font-size 14px
    font-family $Bold
    line-height 30px
    border-radius 3px

    .icon
      margin 0 10px 0 0

  &__param
    display block
    position relative
    padding 0 0 0 145px
    margin 0 0 25px 0
    min-height 24px

    &:last-child
      margin-bottom 0

    &-title
      position absolute
      width 125px
      left -15px
      top 0
      font-family $Bold
      text-align right

  &__aside
    background #fafafa
    border-left 1px solid #e2e2e2
    position absolute
    width 220px
    padding 20px
    top 0
    right 0
    height 100%

  &__form

    .asset-data__param
      line-height 36px
      margin-bottom 20px

      &:last-child
        margin-bottom 0

      .input-txt
      .select
        width 240px

  & + &
    margin-top 45px
