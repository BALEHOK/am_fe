.asset-data
  display block
  position relative
  border 1px solid #e2e2e2
  border-radius 4px
  margin 0 0 10px 0
  padding 45px 30px 30px 30px

  &__header
    position absolute
    left 15px
    top -15px

  &__title
    display inline-block
    vertical-align top
    color #ffffff
    background $colorGreen
    padding 0 20px
    font-size 14px
    font-family $Bold
    line-height 30px
    border-radius 3px

  &__param
    display block
    position relative
    padding 0 0 0 145px
    margin 0 0 25px 0
    min-height 24px

    &:last-child
      margin-bottom 0

    &-title
      position absolute
      width 110px
      left 0
      top 0
      font-family $Bold
      text-align right

  & + &
    margin-top 45px
