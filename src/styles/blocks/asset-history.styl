.asset-history
  border 1px solid #c7c7c7
  margin 0 0 20px 0
  border-radius $br
  font-family Tahoma, Arial, sans-serif
  font-size 12px
  line-height 1.5
  color #7e7e7e

  &__header
    background #4d4d4d
    color #fff
    font-weight bold
    border-bottom 5px solid #d1d1d1
    margin -1px -1px 0 -1px
    border-radius 4px 4px 0 0
    display flex
    flex-wrap wrap
    position relative

    &-group
      display inline-block
      vertical-align top
      padding 12px 15px

      &_field
        width 68%

        .asset-history__history-item
          &_field
            width 20%

          &_value
            width 40%

    &-item
      display inline-block
      vertical-align top
      padding 12px 15px

      &_revision
        width 11%

      &_update
        width 15%

      &_field
        width 14%

      &_value
        width 27%

      &_action
        width 6%
        text-align right
        font-size 10px
        line-height 18px
        font-weight normal
        opacity 0.5

  &__list
    margin 0
    padding 0
    list-style none

  &__item
    border-bottom 1px solid #c7c7c7
    display block
    background #ffffff

    &:nth-child(even)
      background #fcfcfc

    &:last-child
      border-radius 0 0 $br $br

    &-param
      display inline-block
      vertical-align top
      padding 20px 15px

      &_revision
        width 11%

      &_update
        width 15%

      &_field
        width 14%

      &_value
        width 27%

      &_action
        width 6%
        text-align right
        font-size 30px

    &:last-child
      border-bottom none
