.btn
  display inline-block
  vertical-align top
  position relative
  text-align center
  cursor pointer
  font-family $Regular
  font-weight normal
  height 42px
  padding 11px 18px
  font-size 13px
  line-height 1.42857
  white-space nowrap
  border-radius $br
  user-select none
  background-color  $btnBgColor
  background-image linear-gradient(bottom, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0) 100%)
  color $btnColor
  border 1px solid $btnBorderColor
  text-decoration none !important
  outline 0
  transition all .25s ease
  -webkit-appearance none
  box-shadow none
  text-overflow ellipsis
  overflow hidden

  &:hover
    color $btnColor
    background-image linear-gradient(bottom, rgba(0, 0, 0, 0.06) 0%, rgba(0, 0, 0, 0) 100%)

  &:active
  &.btn_state_active
    color $btnColor
    outline 0
    box-shadow inset 0 3px 5px rgba(0, 0, 0, 0.125)

  &:focus
    box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(76, 159, 34, 0.6)

  &:disabled
    background-color $btnBgColorDisabled
    border-color $btnBgColorDisabled

  &__icon
    display inline-block
    vertical-align middle
    font-family $FontAwesome
    font-style normal
    font-weight normal
    line-height 1
    position relative
    font-size inherit
    margin 0 10px

    &:first-child
      margin-left 0

    &:last-child
      margin-right 0

    &_search
      top -1px
      font-size 18px
      line-height 23px
      &::before
        content "\f002"

    &_angle-right
      &::before
        content "\f105"

    &_list
      &::before
        content "\f0ca"

    &_tiles
      &::before
        content "\f00a"

    &_cross
      vertical-align baseline
      &::before
        content "\f00d"

    &_edit
      &::before
        content "\f044"

    &_docs
      vertical-align baseline
      &::before
        content "\f0f6"

    &_print
      &::before
        content "\f02f"

    &_history
      &::before
        content "\f1da"

    &_undo
      vertical-align baseline
      &::before
        content "\f0e2"
    &_plus_circle
      vertical-align baseline
      &::before
        content "\f055"

    &_plus_square
      &::before
        content "\f0fe"


  &_type_second
    background $btnSecondaryBgColor
    background-image  linear-gradient(bottom, #f9f9f9 0%, #ffffff 100%)
    color $btnSecondaryColor
    border-color $btnSecondaryBorderColor

    &:hover
      color $btnSecondaryColor
      background-color $btnSecondaryBgColorHover
      background-image linear-gradient(bottom, #efefef 0%, #fcfcfc 100%)

    &:active
    &.btn_state_active
      outline 0
      color $btnSecondaryColor
      background-color $btnSecondaryBgColorActive
      background-image none
      box-shadow inset 0 3px 5px rgba(0, 0, 0, 0.125)

    &:disabled
      color $btnSecondaryBgColor

    &:focus
      box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(0, 0, 0, 0.2)

  &_type_third
    background #4aaff6
    border-color transparent !important
    color #ffffff
    font-size 15px
    font-family $Bold
    padding-top 9px

    &:hover
    &:active
      background #3198e0

    &:active
    &:focus
      box-shadow 0 0 8px rgba(74, 125, 246, 0.6)

    &:disabled
      opacity 0.5
      background-color #4aaff6
      cursor default

  &_type_warning
    background $btnSecondaryBgColor
    background-image  linear-gradient(bottom, #f9f9f9 0%, #ffffff 100%)
    color $btnSecondaryColor
    border-color $btnSecondaryBorderColor

    &:hover
      background-color #eb525e
      background-image linear-gradient(top, #eb525e 0%, #e61f2e 100%)
      color #ffffff

    &:active
    &.btn_state_active
      outline 0
      background-color #e61f2e
      background-image none
      box-shadow inset 0 3px 5px rgba(0, 0, 0, 0.125)

    &:focus
      box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(0, 0, 0, 0.2)

  &_size_small
    height 36px
    padding 8px 15px
    overflow visible

  &_width_full
    width 100%


