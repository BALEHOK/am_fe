.asset-date-picker
  position relative

  &__time
    position absolute
    background #fff
    left 300px
    z-index 10

  .date-picker
    overflow hidden
    font-size 14px
    background #fff
    width 300px
    height 302px
    z-index 10
    position absolute

    .dp-footer
      display none

    .dp-body
      flex 1
      position relative
      overflow hidden
      height 264px
      .dp-table
        width 100%
        height 100%
      .dp-month-view
        position absolute
        transform translate3d(0%, 0px, 0px)
        &.dp-prev
          left -100%
        &.dp-next
          left 100%
        .dp-week
          display table-row
          list-style none
    .dp-nav-table
      width 100%
      .dp-cell
        border-top-width 0px
        border-bottom-width 0px
    .dp-anim-target
      transform translate3d(0px, 0px, 0px)
      position absolute
      width 100%
      height 100%
      animation-duration 200ms
      &.dp-transition-prev
        animation-name prev-month-nav
      &.dp-transition-next
        animation-name next-month-nav
    .dp-cell
      text-align center
      color inherit
      background inherit
      border 1px solid #a8a8a8
      cursor pointer
      &.dp-in-range
        background #e2f0ff
      &.dp-disabled
        cursor default
        opacity 0.3
        color #5c5c5c
        background inherit
      &:hover
        color inherit
        font-weight inherit
        background #eee
      &.dp-value
        color #000
        font-weight bold
        background #eee
      &.dp-current
        color #2e99eb
        background inherit
    .dp-inner
      border 1px solid #a8a8a8
    .dp-week-day-name
      cursor default
    .dp-nav-cell
      background inherit
      &:hover
        background #eee
    .dp-nav-view
      background inherit
      &:hover
        background #eee

  .date-picker .dp-nav-table,
  .date-picker .dp-body .dp-table
    table-layout fixed

  .date-picker,
  .date-picker *
    box-sizing border-box

  .date-picker .dp-cell.dp-prev,
  .date-picker .dp-cell.dp-next
    color #5c5c5c
    background inherit

  .date-picker .dp-cell.dp-in-range.dp-current,
  .date-picker .dp-cell.dp-in-range.dp-value
    background #e2f0ff

  .date-picker .dp-footer .dp-footer-selected,
  .date-picker .dp-footer .dp-footer-today
    padding 5px 15px
    border-width 1px
    cursor pointer

  .date-picker .dp-body .dp-cell:first-child,
  .date-picker .dp-nav-table .dp-cell:first-child,
  .date-picker .dp-body .dp-cell:last-child,
  .date-picker .dp-nav-table .dp-cell:last-child
    border-left-width 0px
    border-right-width 0px

  .date-picker .dp-nav-table .dp-row:first-child,
  .date-picker .dp-body .dp-row:first-child
    height 30px
    font-weight bold

  .date-picker .dp-nav-view,
  .date-picker .dp-nav-cell
    cursor pointer

