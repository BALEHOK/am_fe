.files-list
  display block
  margin 0 0 0 -15px
  padding 0
  list-style none
  font-family $Regular
  font-size 13px
  line-height 25px

  &__item
    display inline-block
    vertical-align top
    position relative
    margin 0 0 15px 15px
    width 170px

    &-link
      display block
      border 3px solid #efefef
      background #efefef
      border-radius 10px
      padding 105px 5px 5px 5px
      color #000000 !important
      text-decoration none !important
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      text-align center

      &::before
        content ""
        display block
        position absolute
        left 3px
        top 3px
        right 3px
        height 100px
        background #ffffff
        background-position center center
        background-repeat no-repeat
        border-radius 8px 8px 0 0

      &_type_image
        &::before
          background-image url('../images/file-types/type-image.jpg')

      &_type_doc
        &::before
          background-image url('../images/file-types/type-doc.jpg')
