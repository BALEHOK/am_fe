.image-wrapper
    width 165px
    height 135px
    background $colorLightGray

    &__subwrapper
        display flex
        height 100%
        width 100%

    &__img
        align-self center
        text-align center
        flex-basis 100%

        img
            max-width 165px
            max-height 135px

    &__name
        height 30px
        background rgba(0, 0, 0, 0.5)
        color white
        text-align center
        margin-top -30px
        padding: 7px
