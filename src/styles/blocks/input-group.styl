.input-group
  display block

  & > .input-txt

    .input-txt__field
      border-radius 0

    &:first-child
      .input-txt__field
        border-radius $br 0 0 $br

    &:last-child
      .input-txt__field
        border-radius 0 $br $br 0

  & > .btn
    border-radius 0

    &:first-child
      border-radius $br 0 0 $br

    &:last-child
      border-radius 0 $br $br 0
