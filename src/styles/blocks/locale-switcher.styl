.locale-switcher
  display block
  list-style none
  margin 10px 0 0 0
  padding 0

  &__item
    display inline-block
    vertical-align top
    margin 0 0 0 20px
    user-select none
    cursor pointer
    transition all 0.3s ease
    transform scale(0.9, 0.9)

    &:hover
    &_active
      transform scale(1.3, 1.3)

    &_active
      pointer-events none

    &:first-child
      margin-left 0

    .icon
      vertical-align top
