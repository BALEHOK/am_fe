.nav-block
  display block
  position relative
  margin 0 0 25px 0

  &__title
    display block
    background #4d4d4d
    color #fff
    font-weight bold
    border-radius 4px 4px 0 0
    border-bottom 5px solid #d1d1d1
    padding 12px 15px
    margin 0 0 15px 0

  &__list
    display block
    margin 0
    padding 0 0 0 20px
    list-style none

  &__item
    display block
    font-size 13px
    line-height 20px
    padding 5px 0



