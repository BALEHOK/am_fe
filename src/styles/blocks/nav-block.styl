.nav-block
  display block
  position relative
  margin 0 0 25px 0
  font-family "Tahoma", Arial, sans-serif

  &__title
    display block
    background #4d4d4d
    color #fff
    font-weight bold
    border-radius 4px 4px 0 0
    border-bottom 5px solid #d1d1d1
    padding 12px 15px
    margin 0 0 15px 0
    font-size 13px

    &_type_second
      background #efefef
      border-radius 4px
      border 1px solid #bcbcbc
      border-top-color #e2e2e2
      border-left-color #d5d5d5
      border-right-color #d5d5d5
      //border-image linear-gradient(#e2e2e2, #bcbcbc) 1 stretch
      color #333333
      font-size 13px
      padding 8px 15px


  &__list
    display block
    margin 0
    padding 0 0 0 0
    list-style none

  &__item
    display block
    font-size 13px
    line-height 20px
    padding 5px 0 5px 20px

    &-related
      padding-right 5px

    &-clear
      margin 0 0 0 5px
      color $colorRed
      cursor pointer

    strong
      font-family inherit
      font-weight bold
      color #000000
      cursor pointer



