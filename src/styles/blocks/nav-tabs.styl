.tabs .tabs-menu
  display block
  position relative
  list-style none
  margin 0 0 30px 0
  padding 0

  &__item
  li
    display inline-block
    vertical-align top
    margin 0 0 0 15px

    &:first-child
      margin-left 0

    &-link
    a
      display block
      border 1px solid #e4e4e4
      border-radius 4px
      color #7f7f7f
      padding 10px 25px
      cursor pointer

      &:hover
        text-decoration none
        background-color #eeeeee

    &_active
    &.is-active
      .nav-tabs__item-link
      a
        border-color #c9c9c9
        background #ffffff
        color #333
        position relative

        &::after
        &::before
          top 100%
          left 50%
          border solid transparent
          content ''
          height 0
          width 0
          position absolute
          pointer-events none


        &::after
          border-color rgba(255, 255, 255, 0)
          border-top-color: #fff
          border-width 8px
          margin-left -8px

        &::before
          border-color rgba(201, 201, 201, 0)
          border-top-color #c9c9c9
          border-width 9px
          margin-left -9px

      &:hover
        .nav-tabs__item-link
        a
          background #ffffff
          color $colorBlack

.asset-data__tabs
  .nav-tabs
    position absolute
    left 15px
    top -16px

    &__item
    li
      display inline-block
      vertical-align top
      margin 0 15px 0 0

      &-link
      a
        display inline-block
        vertical-align top
        padding 0 20px
        font-size 14px
        font-family $Bold
        line-height 30px
        border-radius 3px
        background $btnSecondaryBgColor
        background-image  linear-gradient(bottom, #f9f9f9 0%, #ffffff 100%)
        color $btnSecondaryColor
        border-color $btnSecondaryBorderColor

        &:hover
          background-color $btnSecondaryBgColorHover
          background-image linear-gradient(bottom, #efefef 0%, #fcfcfc 100%)

        &::after
        &::before
          display none !important

      &_active
      &.active
        .nav-tabs__item-link
        a
          color #ffffff
          background $colorGreen
          border-color $colorGreen
