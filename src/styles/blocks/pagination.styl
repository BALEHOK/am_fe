.pagination
  display inline-block
  position relative

  &__list
    display inline-block
    vertical-align top
    margin 0
    padding 0
    list-style none

  &__item
    display inline-block
    vertical-align top
    margin 0 0 0 5px

  &__link
    display inline-block
    vertical-align top
    width 34px
    height 30px
    border 1px solid #bcbcbc
    border-radius 3px
    color #bcbcbc
    font-family $Medium
    text-align center
    font-size 14px
    line-height 28px
    background #ffffff
    text-decoration none !important
    user-select none
    margin 0 0 0 5px

    &:only-child
      margin 0

    &:hover
      color #bcbcbc
      background-color $btnSecondaryBgColorHover
      background-image linear-gradient(bottom, #e7e7e7 0%, #f4f4f4 100%)

    &:active
      color #bcbcbc
      outline 0
      background-color $btnSecondaryBgColorActive
      background-image none
      box-shadow inset 0 3px 5px rgba(0, 0, 0, 0.125)

    &_active
      background #535353 !important
      color #ffffff !important
      border-color #414141 !important
      box-shadow none !important
      cursor default

.pagination-row
  padding 10px 20px
  color #b0b0b0
  font-size 12px
  line-height 30px

  &__title
    display inline-block
