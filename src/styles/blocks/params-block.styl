.params-block
  display inline-block
  position relative
  border 3px solid #efefef
  border-radius 10px
  padding 20px 15px
  min-width 205px

  &__title
    position absolute
    background #ffffff
    font-family $Bold
    font-size 13px
    line-height 20px
    top -13px
    left 10px
    padding 0 10px
    color #969696

  &__list
    margin 0
    padding 0
    list-style none

    &-item
      margin 0 0 5px 0
      position relative
      padding 0 0 0 13px

      &::before
        content "\f105"
        position absolute
        left 0
        font-family $FontAwesome
        font-style normal
        font-weight normal
        font-size inherit
