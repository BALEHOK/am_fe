.search-condition
  display block
  border-top 1px solid #c7c7c7
  background #f6f6f6
  margin 0 0 15px 0

  &_simple
    .table-search__row-item
      width 100%

  &__row
    display block
    margin 1px 0 0 0
    padding 0

    &:first-child
      margin-top 0

    &-remove
      display inline-block
      vertical-align middle
      cursor pointer
      color #515151
      white-space nowrap
      user-select none
      font-size 11px

      &::before
        vertical-align middle
        content "\f00d"
        font-family $FontAwesome
        margin 0 7px 0 0
        font-size inherit

      &:hover
        &::before
          color $colorBlack

  &__add-row
    display inline-block
    vertical-align middle
    cursor pointer
    color #515151
    white-space nowrap
    user-select none
    font-size 11px

    &::before
      vertical-align middle
      content "\f0fe"
      font-family $FontAwesome
      margin 0 7px 0 0
      font-size inherit
      position relative
      top -1px

    &:hover
      &::before
        color $colorBlack

