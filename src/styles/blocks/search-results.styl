.search-results
  border 1px solid #c7c7c7
  margin 0 0 20px 0
  border-radius $br

  &__header
    background #4d4d4d
    color #fff
    font-weight bold
    border-bottom 5px solid #d1d1d1
    margin -1px -1px 0 -1px
    border-radius 4px 4px 0 0
    display flex
    flex-wrap wrap
    position relative

    &-item
      display inline-block
      vertical-align top
      padding 12px 15px

      &_name
        width 32%

      &_category
        width 25%

      &_attr
        width 32%

      &_link
        width 11%
        text-align right
        font-size 10px
        font-weight normal
        opacity 0.5

  &__list
    margin 0
    padding 0
    list-style none

  &__item
    border-bottom 1px solid #c7c7c7
    display block
    background #ffffff

    &:nth-child(even)
      background #fcfcfc

    &-link
      display flex
      flex-wrap wrap
      text-decoration none !important
      color inherit !important

    &-param
      display inline-block
      vertical-align top
      padding 20px 15px

      &_name
        width 32%
        color $colorGreen

      &_category
        width 25%

      &_attr
        width 32%

      &_link
        width 11%
        text-align right
        font-size 30px
    &-attr
      display block
      max-height 55px
      overflow hidden
      text-overflow ellipsis

    &:last-child
      border-bottom none

  .pagination-row
    background #f2f2f2
    border-top 1px solid #c7c7c7
    border-radius 0 0 $br $br

  &_type_tiles
    border none

    .pagination-row
      background none
      border-top none
      padding-right 0
      padding-left 0

      &__title
        display none

    .search-results

      &__list
        margin-left -15px

      &__header
        display none

      &__item
        display inline-block
        vertical-align top
        width 25%
        padding 0 0 0 15px
        background #ffffff !important
        border none
        margin 0 0 15px 0

        &-link
          display block
          position relative
          height 140px
          border 1px solid #dddddd
          border-radius 3px

          &:hover
            border-color #767676

        &-attr
          max-height 40px
          overflow hidden
          text-overflow ellipsis

        &-param
          display block
          width 100% !important
          padding 10px 15px
          white-space nowrap
          overflow hidden
          text-overflow ellipsis

          &_name
            border-bottom 1px solid #dddddd
            text-overflow ellipsis
            background linear-gradient(to bottom, #ffffff, #f9f9f9)
            border-radius 3px 3px 0 0

          &_link
            display none

          &_attr
            white-space normal
            max-height 60px
            overflow hidden

          &_category
            padding 9px 15px
            position absolute
            left 0
            bottom 0
            right 0

          .label
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            max-width 100%
