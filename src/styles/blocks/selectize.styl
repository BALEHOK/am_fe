.select
  min-width 140px
  display inline-block
  vertical-align middle
  font-size $baseFontSize
  font-family $Regular
  line-height: 1.5
  text-align left
  color $baseColor

  &_width_full
    width 100% !important
    margin 0 0 20px 0

  &_search_false
    .selectize-input > input
      display none

  &_size_small

    .selectize-input
      height 36px
      padding-top 8px
      padding-bottom 8px

  .Select-option.is-focused
    background #eee

  .Select-item
    color #000
    background #f2f2f2
    border none

  .Select-item-icon
    display none

  .Select-control
    box-sizing border-box
    padding 11px 52px 10px 10px
    border 1px solid #ccc

  .Select-placeholder
    padding 11px 52px 10px 10px

  .Select-arrow
    top: 18px
    border-color: #000 transparent transparent
    transition-delay 1s
    transition: transform 0.15s linear

  .is-open > .Select-control > .Select-arrow
    border-color: #000 transparent transparent
    border-width: 5px 5px 0
    transform rotate(-180deg)

  .is-focused:not(.is-open) > .Select-control
    border 1px solid #cccccc
    box-shadow none

  .Select-placeholder
    padding-right 30px
