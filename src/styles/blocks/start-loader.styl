.start-loader-section
  position fixed
  width 100%
  height 100%
  background #ffffff

.start-loader
  width 100px
  height 100px
  position absolute
  left 50%
  top 50%
  margin -50px 0 0 -50px

  &__container_1
  &__container_2
  &__container_3
    & > div
      width 30px
      height 30px
      background-color #4c9f22
      border-radius 100%
      position absolute
      animation bouncedelay 1.2s infinite ease-in-out
      animation-fill-mode: both;

  &__container
    position absolute
    width 100%
    height 100%

    &_1
      .circle2
        animation-delay -0.9s

      .circle3
        animation-delay -0.6s

      .circle4
        animation-delay -0.3s

    &_2
      transform rotateZ(45deg)

      .circle1
        animation-delay -1.1s

      .circle2
        animation-delay -0.8s

      .circle3
        animation-delay -0.5s

      .circle4
        animation-delay -0.2s

    &_3
      transform rotateZ(90deg)

      .circle1
        animation-delay -1.0s

      .circle2
        animation-delay -0.7s

      .circle3
        animation-delay -0.4s

      .circle4
        animation-delay -0.1s

.circle1
  top 0
  left 0

.circle2
  top 0
  right 0

.circle3
  right 0
  bottom 0

.circle4
  left 0
  bottom 0

@keyframes bouncedelay {
  0%, 80%, 100% {
    transform scale(0.0)
  }
  40% {
    transform scale(1.0)
  }
}
