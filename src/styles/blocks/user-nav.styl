.user-nav
  display inline-block
  vertical-align top
  position relative
  padding 0 0 0 50px
  min-height 40px
  font-family $Regular
  font-size 13px

  &__pic
    display inline-block
    vertical-align top
    width 40px
    height 40px
    position absolute
    left 0
    top 0

    img
      display inline-block
      vertical-align top
      max-width 100%
      max-height 100%
      border-radius 50%

  &__profile-link
    font-family $Bold
    color $linkColor

  &__actions
    display inline-block

    &-item
      display inline-block
      font normal normal normal 14px/1 $FontAwesome
      text-rendering auto
      -webkit-font-smoothing antialiased
      -moz-osx-font-smoothing grayscale
      font-size 17px
      color #515151
      opacity 0.4
      margin 0 0 0 8px
      text-decoration none !important

      &_icon_settings
        &::before
          content "\f013"

      &_icon_help
        &::before
          content "\f059"

      &_icon_msg
        &::before
          content "\f0e0"

      &_icon_logout
        &::before
          content "\f08b"

      &:hover
        color $linkColor
        opacity 1

  &__login-date
    display block
    color $colorGray
    font-size 11px
    padding 5px 0 0 0
