*
  box-sizing border-box

//html
//  -webkit-font-smoothing antialiased

body
  margin 0
  padding 0
  font-family $Regular
  font-size $baseFontSize
  line-height 1.5
  color $baseColor
  background #ffffff

.clearfix
  &:after
  &:before
    content ''
    display table
    line-height 0
  &:after
    clear both


a
.link
  @extend $link

.link
  &_second
    @extend $linkSecond

strong
  font-family $Medium
  font-weight normal

h1
h2
h3
h4
h5
h6
  color $colorBlack

.page-title
  font-family $Bold
  font-size 30px
  margin 0 0 30px 0
  padding 0
  font-weight normal
  color $colorBlack

  &_small
    font-size 25px

  &__param
    color $colorGreen

  & + .back-nav
  & + .revision-info
    margin-top -25px

  .icon_history
    color #acacac
    margin 0 15px 0 0

.arrow-separator
  display inline-block
  vertical-align middle
  height 15px
  width 75px
  background url('../images/arrow-separator.png') right 50% no-repeat
  margin 0 15px

  &_size_small
    width 25px

.light-grey
  color #b9b9b9

.label
  display inline-block
  background #f6f6f6
  color #7e7e7e
  font-size 12px
  line-height 22px
  padding 0 6px
  font-family Tahoma, Arial, sans-serif
  border-radius 2px

.no-data
  color #b2b2b2
  font-family Tahoma, Arial, sans-serif
  font-style italic

.back-nav
  margin 0 0 35px 0
  font-size 13px

  .icon
    font-size 16px
    margin 0 10px 0 0
    vertical-align text-bottom

.revision-info
  margin 0 0 10px 0
  font-size 13px

.input-file
  position absolute
  top 0
  right 0
  margin 0
  font-size 300px
  cursor pointer
  opacity 0
  z-index 1

$loading
  content ""
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  background-image linear-gradient( -45deg, rgba(255, 255, 255, .2) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, .2) 50%, rgba(255, 255, 255, .2) 75%, transparent 75%, transparent )
  z-index 1
  background-size 50px 50px
  animation loadingBg 2s linear infinite
  overflow hidden

$loadingCircle
  content ""
  font-size 10px
  position relative
  width 10em
  height 10em
  text-indent -9999em
  border-top 1.1em solid rgba(0, 0, 0, 0.2)
  border-right 1.1em solid rgba(0, 0, 0, 0.2)
  border-bottom 1.1em solid rgba(0, 0, 0, 0.2)
  border-left 1.1em solid #000
  animation loadingCircle 1.1s infinite linear
  border-radius 50%

@keyframes loadingBg {
  0% {
    background-position 0 0
  }
  100% {
    background-position 50px 50px
  }
}

@keyframes loadingCircle {
  0% {
    transform rotate(0deg)
  }
  100% {
    transform rotate(360deg)
  }
}
