.checkbox
  display inline-block
  position relative
  //padding 0 0 0 30px
  //cursor pointer
  user-select none

  img
    vertical-align text-bottom

  &__input
    position absolute
    left 0
    top 0
    opacity 0

    &:checked
      & + .checkbox__icon
        background #ffffff
        background-size 100% 100%
        border-color #949494
        color #000000
        &::after
          transform scale(1)

    &:disabled
      & + .checkbox__icon
        background #f5f5f5 !important
        border 1px solid #bbbbbb !important
        cursor default
        color #494949 !important
        &::after
          opacity 0.5

  &__icon
    display inline-block
    vertical-align middle
    position relative
    top -3px
    margin 0 10px 0 0
    width 18px
    height 18px
    background #f5f5f5
    border 1px solid #bbbbbb
    cursor pointer
    transition all 0.2s ease-in-out

    &::after
      content '\f00c'
      font-family $FontAwesome
      font-style normal
      font-weight normal
      line-height 1
      font-size 13px
      display block
      width 12px
      height 12px
      position absolute
      left 50%
      top 50%
      margin -6px 0 0 -6px
      transform scale(0)
      transition all 0.2s ease-in-out

  &:hover
    .checkbox__icon
      border-color #949494
