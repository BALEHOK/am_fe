.icon
  display inline-block
  //vertical-align middle
  font-family $FontAwesome
  font-style normal
  font-weight normal
  line-height 1
  position relative
  font-size inherit

  &_angle-right
    &::before
      content "\f105"

  &_angle-d-right
    &::before
      content "\f101"

  &_angle-left
    &::before
      content "\f104"

  &_angle-d-left
    &::before
      content: "\f100";

  &_cross
    &::before
      content "\f00d"

  &_download
    margin 0 7px 0 0
    &::before
      content "\f019"

  &_arrow_right
    &::before
      content "\f061"

  &_lock
    &::before
      content "\f023"

  &_arrow-c_right
    &::before
      content "\f190"

  &_history
    &::before
      content "\f1da"

  &_eye
    font-size 18px
    &::before
      content "\f06e"

  &_plus
    &::before
      content "\f055"

  &_new
    &::before
      content "\f069";

  &_chevron-right
    &::before
      content "\f054";

  &_asterisk
    &::before
      content "\f069";

  &_locale_en-GB
  &_locale_fr-BE
  &_locale_nl-BE
    width 20px
    height 15px
    background-size 100% auto
    background-repeat no-repeat
    background-position 0 0

  &_locale_en-GB
    background-image url64('../images/flags/gb.svg')

  &_locale_fr-BE
    background-image url64('../images/flags/fr.svg')

  &_locale_nl-BE
    background-image url64('../images/flags/be.svg')
